{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@account/*": ["account/*"],
      "@consumer/*": ["consumer/*"],
      "@core/*": ["core/*"],
      "@order/*": ["order/*"],
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
